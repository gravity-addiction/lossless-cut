[Unit]
Description=SDOBOX Service
# After=mpv.service

[Service]
Type=idle
Restart=on-failure

PIDFile=/tmp/sdobox.pid
ExecStart=/opt/sdobox/bin/sdobox


KillSignal=SIGINT
KillMode=process
User=pi
WorkingDirectory=/home/pi

# Debugging Settings
# StandardError=NULL
# StandardOutput=NULL
# Environment="DBGMASK=1111111111"
# ExecStart=sudo /home/pi/Downloads/sdobox/touchapp

[Install]
WantedBy=multi-user.target
